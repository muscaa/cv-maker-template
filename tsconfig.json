{
    "compilerOptions": {
        "lib": [
            "dom",
            "dom.iterable",
            "es6"
        ],
        "allowJs": true,
        "checkJs": true,
        "skipLibCheck": true,
        "strict": true,
        "esModuleInterop": true,
        "target": "es6",
        "module": "commonjs",
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "isolatedModules": true,
        "incremental": true,
        "paths": {
            "@/*": [
                "./src/*"
            ]
        }
    },
    "include": [
        "**/*.ts",
    ],
    "exclude": [
        "node_modules"
    ]
}
